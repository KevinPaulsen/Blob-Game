        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jakemcdowell.blobsapplication.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="jakemcdowell.blobsapplication.GameActivity" />
        <activity
            android:name="jakemcdowell.blobsapplication.HelpActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="jakemcdowell.blobsapplication.ShopActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="jakemcdowell.blobsapplication.DamageIncreaseActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="jakemcdowell.blobsapplication.RadiusIncreaseActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="jakemcdowell.blobsapplication.GoldIncreaseActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
